<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignUpShopkeeper</servlet-name>
        <servlet-class>controller.SignUpShopkeeper</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlaceTheOrder</servlet-name>
        <servlet-class>controller.PlaceTheOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Shop1</servlet-name>
        <servlet-class>controller.Shop1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpShopkeeper</servlet-name>
        <url-pattern>/SignUpShopkeeper</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlaceTheOrder</servlet-name>
        <url-pattern>/PlaceTheOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Shop1</servlet-name>
        <url-pattern>/Shop1</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
